{
    
    "containerDefinitions": [
        {
            "name": "mongo",
            "image": "public.ecr.aws/e2v1e3p8/todo-app-db",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp",
                    "name": "mongo-80-tcp",
                    "appProtocol": "http"
                },
                {
                    "containerPort": 27017,
                    "hostPort": 27017,
                    "protocol": "tcp",
                    "name": "mongo-27017-tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "MONGO_INITDB_ROOT_USERNAME",
                    "value": "username"
                },
                {
                    "name": "MONGO_INITDB_ROOT_PASSWORD",
                    "value": "password"
                }
            ],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/todo-task-definition",
                    "awslogs-create-group": "true",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": []
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "mongosh --eval \"db.runCommand({ ping: 1 })\""
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 5,
                "startPeriod": 30
            },
            "systemControls": []
        },
        {
            "name": "todo-backend-container",
            "image": "public.ecr.aws/e2v1e3p8/todo-app-backend",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001,
                    "protocol": "tcp",
                    "name": "todo-backend-container-3001-tcp"
                }
            ],
            "essential": false,
            "environment": [],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "dependsOn": [
                {
                    "containerName": "mongo",
                    "condition": "HEALTHY"
                }
            ],
            "systemControls": []
        },
        {
            "name": "todo-frontend-container",
            "image": "public.ecr.aws/e2v1e3p8/todo-app-frontend",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp",
                    "name": "todo-frontend-container-3000-tcp"
                }
            ],
            "essential": false,
            "environment": [],
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "systemControls": []
        }
    ],
    "family": "todo-task-definition",
    "taskRoleArn": "arn:aws:iam::461535891807:role/ECS-taskExecution",
    "executionRoleArn": "arn:aws:iam::461535891807:role/ECS-taskExecution",
    "networkMode": "awsvpc",
    
    "volumes": [],
    "status": "ACTIVE",
    
    "placementConstraints": [],
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    },
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "enableFaultInjection": false,
    "enableExecuteCommand": true
}
